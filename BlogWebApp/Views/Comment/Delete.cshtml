@using BlogWebApp.Controllers
@using BlogWebApp.BLL.ViewModels.Comments
@model DeleteCommentViewModel

@{
    ViewData["Title"] = "Комментарии";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Удалить комментарий?</h2>

<div>
    <hr />
    <form id="changerole-form" method="post">
        <div class="form-floating">
            @if (Model.Image != null)
            {
                @Html.Raw("<img style='height:150px;' src=\"data:image/jpeg;base64," + Convert.ToBase64String(Model.Image) + "\" />")
            }
        </div>
        <div>                
            <p></p>
        </div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Content)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Content)
            </dd>
        </dl>
        <button id="update-profile-button" type="submit" class="btn btn-lg btn-danger">Удалить</button>
    </form>
</div>