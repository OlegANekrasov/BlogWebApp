@using BlogWebApp.Controllers
@using BlogWebApp.BLL.ViewModels.Users
@model UserViewModel

@{
    ViewData["Title"] = "Пользователи";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Пользователь</h2>
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div class="form-floating">
                @if (Model.Image != null)
                {
                    @Html.Raw("<img style='height:150px;' src=\"data:image/jpeg;base64," + Convert.ToBase64String(Model.Image) + "\" />")
                }
            </div>
            <div>                
                <p></p>
            </div>
            
            <div>
                <label class="form-label">Роль: </label>
                @foreach (var role in Model.Roles)
                {
                    <a asp-controller="Role" asp-action="Show" asp-route-name="@role.Name" class="btn btn-sm btn-secondary"> @Html.DisplayFor(modelItem => role.Name) </a>
                }
                <p></p>
            </div>
            
            <div class="form-floating">
                <input asp-for="FirstName" class="form-control" disabled />
                <label asp-for="FirstName" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="LastName" class="form-control" disabled />
                <label asp-for="LastName" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="MiddleName" class="form-control" disabled />
                <label asp-for="MiddleName" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Email" class="form-control" disabled />
                <label class="form-label">Email</label>
            </div>
            <div class="form-floating">
                <input asp-for="BirthDate" class="form-control" disabled />
                <label asp-for="BirthDate" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="BlogArticles" class="form-control" disabled />
                <label asp-for="BlogArticles" class="form-label"></label>
            </div>
            <div class="form-floating">
                <textarea asp-for="About" class="form-control" style="height:150px;" disabled >@Model.About</textarea>
                <label class="form-label">О пользователе</label>
            </div>
        </form>
    </div>
</div>

